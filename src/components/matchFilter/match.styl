.match
    height: 100%;
.match-arr-content
    width: 100%;
    height: 100%;
    margin-top: -50px;
    padding-top: 50px;

.matchArrs
    width: 100%;
    height: 100%;
    overflow: auto;
    .arr-content
        width: 100%;
        background: #f3f3f3;
        list-style: none;
        margin: 0;
        padding: 0;
        .arr-items
            font: 12px 'microsoft yahei';
            line-height: 25px;
            height: 25px;
            color: #000;
            padding: 0 0 0 20px;
            cursor: pointer;
        .arr-items:nth-child(even)
            background: #fff;
        .arr-items:hover
            text-decoration: underline;
        .arr-items.active
            background: #7171f7;
            color: #fff;

.matchArrs::-webkit-scrollbar
    width: 5px;
    height: 5px;
    border-radius: 5px;
    background: #b5b9bd;

/* 设置滚动条的滑轨 */
.matchArrs::-webkit-scrollbar-track
    background-color: #ddd;

/* 滑块 */
.matchArrs::-webkit-scrollbar-thumb
    background-color: #a0a0a0;
    border-radius: 5px;

 /* 滑轨两头的监听按钮 */
.matchArrs::-webkit-scrollbar-button
    background-color: #888;
    display: none;
