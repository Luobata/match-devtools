.matchArrs
    width: 100%;
    height: 100%;
    .arr-content
        width: 100%;
        background: #f3f3f3;
        list-style: none;
        margin: 0;
        padding: 0;
        .arr-items
            font: 12px 'microsoft yahei';
            line-height: 25px;
            height: 25px;
            color: #000;
            padding: 0 0 0 20px;
            cursor: pointer;
        .arr-items:nth-child(even)
            background: #fff;
        .arr-items:hover
            text-decoration: underline;
        .arr-items.active
            background: #7171f7;
            color: #fff;
